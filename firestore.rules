rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true;
      allow create: 
        if request.auth != null; // Allow any authenticated user to create documents
      allow write: 
        if request.auth != null && 
           resource.data.metadata.owner == request.auth.uid; 
    }
  }
}